{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}Product - {{ parent() }}{% endblock %}


{% block app_menu %}
    {{ include("FlowerStockBundle::appnav.html.twig", { 'app_product': true }) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ product.name|title }}
        </h1>
    </section>
    <section class="content">
        <div class="box" id='showProduct'>
            <div class="box-header">
                <div class="box-tools  pull-right">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}

                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm" type="submit"> {{ 'Delete'|trans({}, 'Product') }}</button>
                        <input name="modal" type="hidden" value="0">

                        <a class="btn btn-link  btn-sm" onclick="showEdit(true)">
                            {{ 'Edit'|trans({}, 'Product') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}

                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                    <tr>
                        <th scope="row">{{ 'Name'|trans({}, 'Product') }}</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    {% if product.category %}
                        <tr>
                            <th scope="row">{{ 'Category'|trans({}, 'Product') }}</th>
                            <td>{{ product.category }}</td>
                        </tr>
                    {% endif %}
                    <tr>
                        <th scope="row">{{ 'Price'|trans({}, 'Product') }}</th>
                        <td>{{ product.price }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Enabled'|trans({}, 'Product') }}</th>
                        <td>{% if product.enabled %}<i class="fa fa-check-square-o"></i>{% else %}<i
                                    class="fa fa-square-o"></i>{% endif %}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>
        <div class="box" id='editFormProduct' style="display: none;">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}
                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm" type="submit"> {{ 'Delete'|trans({}, 'Product') }}</button>
                        <a class="btn btn-link  btn-sm" onclick="showEdit(false)">
                            {{ 'Cancel'|trans({}, 'Account') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}
                </div>
            </div>
            <div class="box-body">
                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn-default btn" type="submit">{{ 'Save'|trans({}, 'Product') }}</button>
                </p>
                {{ form_end(edit_form) }}
            </div>
            <div class="box-footer">
            </div>
        </div>
    </section>

    <div class="btn-group record_actions"></div>

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'Product') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'Product') }}
                        , {{ 'this procedure is irreversible'|trans({}, 'Product') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'Product') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'Product') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'Product') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript">
        function showEdit(show) {
            if (show) {
                $('#showProduct').hide();
                $('#editFormProduct').show();
            } else {
                $('#showProduct').show();
                $('#editFormProduct').hide();
            }
        }

    </script>
{% endblock %}