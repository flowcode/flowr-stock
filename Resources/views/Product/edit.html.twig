{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'Product'}, 'Product') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content">
        {{ include("FlowerStockBundle::appnav.html.twig", {  }) }}
        <div class="box">
            <div class="box-body">

                {{ form_start(edit_form) }}

                {{ form_row(edit_form.name) }}
                {{ form_row(edit_form.category) }}
                {{ form_row(edit_form.price) }}
                {{ form_row(edit_form.stock) }}
                {{ form_row(edit_form.enabled) }}

                <table class="table table-condensed">
                    <tbody class="raw-materials"
                           data-prototype="{{ form_widget(edit_form.rawMaterials.vars.prototype)|e }}">
                    {% for productrawmaterial in edit_form.rawMaterials %}
                        <tr>
                            <td>{{ form_widget(productrawmaterial.rawMaterial) }}</td>
                            <td>{{ form_widget(productrawmaterial.quantity) }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <p>
                    <button class="btn-default btn" type="submit"><i
                                class="fa fa-edit"></i> {{ 'Save'|trans({}, 'Product') }}</button>
                </p>
                {{ form_end(edit_form) }}
            </div>
            <div class="box-footer">

                {{ form_start(delete_form) }}
                {{ form_widget(delete_form) }}

                <div class="btn-group record_actions">
                    <button class="btn btn-link btn-sm" type="submit"> {{ 'Delete'|trans({}, 'Product') }}</button>
                    <input name="modal" type="hidden" value="0">

                </div>
                <input name="modal" type="hidden" value="0">
                {{ form_end(delete_form) }}

            </div>
        </div>
    </section>
{% endblock %}


