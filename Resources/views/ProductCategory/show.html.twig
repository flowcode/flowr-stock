{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}ProductCategory - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerStockBundle::appnav.html.twig", { 'app_productcategory': true }) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ productcategory.name|title }}
        </h1>
    </section>
    <section class="content">
        <div class="box" id='showProductCategory'>
            <div class="box-header">
                <div class="box-tools  pull-right">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}

                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm"
                                type="submit"> {{ 'Delete'|trans({}, 'ProductCategory') }}</button>
                        <input name="modal" type="hidden" value="0">

                        <a class="btn btn-link  btn-sm" onclick="showEdit(true)">
                            {{ 'Edit'|trans({}, 'ProductCategory') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}

                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                    <tr>
                        <th scope="row">{{ 'Name'|trans({}, 'ProductCategory') }}</th>
                        <td>{{ productcategory.name }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>
        <div class="box" id='editFormProductCategory' style="display: none;">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}
                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm"
                                type="submit"> {{ 'Delete'|trans({}, 'ProductCategory') }}</button>
                        <a class="btn btn-link  btn-sm" onclick="showEdit(false)">
                            {{ 'Cancel'|trans({}, 'Account') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}
                </div>
            </div>
            <div class="box-body">

                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn-default btn" type="submit"> {{ 'Save'|trans({}, 'ProductCategory') }}</button>
                </p>
                {{ form_end(edit_form) }}
            </div>
            <div class="box-footer">
            </div>
        </div>
    </section>

    <div class="btn-group record_actions"></div>

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'ProductCategory') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'ProductCategory') }}
                        , {{ 'this procedure is irreversible'|trans({}, 'ProductCategory') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'ProductCategory') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'ProductCategory') }}</button>
                    <button class="btn btn-default"
                            data-dismiss="modal">{{ 'No'|trans({}, 'ProductCategory') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript">
        function showEdit(show) {
            if (show) {
                $('#showProductCategory').hide();
                $('#editFormProductCategory').show();
            } else {
                $('#showProductCategory').show();
                $('#editFormProductCategory').hide();
            }
        }

    </script>
{% endblock %}